{
    "name": "medical-clinic/backend",
    "description": "Medical Clinic Management System Backend API",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^6.9",
        "twilio/sdk": "^7.16",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "MedicalClinic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MedicalClinic\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "@php -S localhost:8000 -t public",
        "migrate": "php database/migrate.php",
        "seed": "php database/seeds/seed.php",
        "fresh": "php database/migrate.php fresh",
        "rollback": "php database/migrate.php rollback"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "process-timeout": 0
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
